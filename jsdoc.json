{
  "source": {
    "include": ["js/"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules/|docs/)"
  },
  "opts": {
    "encoding": "utf8",
    "destination": "docs/api/",
    "recurse": true,
    "readme": "README.md"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": false
  }
}
